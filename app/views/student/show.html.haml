= render('partials/account_information_panel')

%div.panel.panel-default
  %div.panel-heading
    %h4 Scenarios
  %table.table
    %thead
      %tr
        %th Name
        %th Status
        %th Instructor
        %th Actions
    %tbody
      - if @scenarios.size > 0
        - @scenarios.each do |scenario|
          %tr
            %td= scenario.name
            %td= scenario.status
            %td= scenario.user.name
            %td
              %div.btn-group.btn-group-xs
                = link_to 'Show', student_scenario_path(scenario), class: 'btn btn-default'
      - else
        %tr
          %td{colspan: 4}
            There are no scenarios
