$('#player-<%= @player.id.to_s %>').remove();
<% if @player.user %>
	$('#student-<%= @player.user.id %>-answers').remove();
	$('#student-<%= @player.user.id %>-answers-tr').remove();
<% end %>
<% if !@player.group.scenario.stopped? %>
  $('#save-button-li').removeClass('disabled');
  $('#save-button').attr('href', '/scenarios/<%= @player.group.scenario.id %>/save');
<% end %>
update_flash("Removed player '<%= @player.login %>' from group '<%= @player.group.name %>'.");
