<% if @scenario.queued? or @scenario.booting? or @scenario.unbooting? %>
  setTimeout(function() { get_scenario_status('<%= @scenario.id %>'); }, 2000);
<% else %>
  setTimeout(function() { get_scenario_status('<%= @scenario.id %>'); }, 1000);
<% end %>
