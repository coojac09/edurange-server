<% if @answer.errors.any? %>
	<% if @answer.errors[:text].any? %>
		$('#question-<%= @question.id %>-answers').find('#help-div').attr('class', 'has-error');
		$('#question-<%= @question.id %>-answers').find('#help-span').text('<%= @answer.errors[:text][0] %>');
	<% end %>
<% else %>
	$('#question-<%= @question.id %>-answers').find('#help-div').attr('class', '');
	$('#question-<%= @question.id %>-answers').find('#help-span').text('');
	$('#question-<%= @question.id %>-answers-table').append('<%=j render("/student_scenarios/answer_string_number", answer: @answer)%>');
	$('#question-<%= @question.id %>-answers-text-field').val('');
<% end %>
