= form_for @variable, url: {action: 'create'} do |f|
  %div.form-group{class: ('has-error' if @variable.errors[:name].any?)}
    = f.label 'Name', class: 'control-label'
    = f.text_field :name, class: 'form-control'
    - if @variable.errors[:name].any? then
      %span.help-block
        = @variable.errors[:name].join(', ')
  %div.form-group
    = f.label 'Type', class: 'control-label'
    = f.select :type, Variable.types.keys.map{|t| [t.humanize, t]}, {}, class: 'form-control'
  %div.form-group
    = f.label 'Player Variable', class: 'control-label'
    = f.check_box  :template, class: 'form-control'
  - if @variable.string? then
    %div.form-group
      = f.label 'Value', class: 'control-label'
      = f.text_field :value, class: 'form-control'
  = f.submit "Add", class: 'form-control'
