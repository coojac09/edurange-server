- content_for :main do
  = render '/scenarios/show/modals'
  %div.panel.panel-default
    %div.panel-heading.panel-heading-with-tabs
      %h3.panel-title#scenario-name=@scenario.name
      %ul.nav.nav-tabs
        %li{class: ('active' if request.path == scenario_path(@scenario))}
          = link_to('Scenario', scenario_path(@scenario))
        %li{class: ('active' if request.path == players_scenario_path(@scenario))}
          = link_to('Players',  players_scenario_path(@scenario))
        %li{class: ('active' if request.path == scoring_scenario_path(@scenario))}
          = link_to('Scoring', scoring_scenario_path(@scenario))
        %li{class: ('active' if request.path == scenario_commands_path(@scenario))}
          = link_to('Command History', scenario_commands_path(@scenario))
        %li{class: ('active' if request.path == guide_scenario_path(@scenario))}
          = link_to('Guide', guide_scenario_path(@scenario))
        %li{class: ('active' if request.path == instances_scenario_path(@scenario))}
          = link_to('Instances', instances_scenario_path(@scenario))
    = yield
  = link_to 'Back', scenarios_path, class: 'btn btn-default'
= render template: 'layouts/application'
