!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Edurange'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Edurange'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = yield(:head)
  - if controller.controller_name == 'schedules'
    %body{"data-turbolinks" => "true"}
  - else
    %body{"data-turbolinks" => "false"}
  %header
    /= render 'layouts/links'
    = render 'layouts/navigation'
  %main{:role => "main"}
    = render 'layouts/messages'
    = content_for?(:main) ? yield(:main) : yield
